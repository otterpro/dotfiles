#aliases

# ls, remember alias cascades.
## OS Specific
if [[ $OSTYPE == linux* ]] || [[ $OSTYPE == cygwin ]]; then
	   alias ls='ls -F --color=auto'
else
	   alias ls='ls -GF'
fi
alias ll="ls -lh"
alias la="ls -a"
alias lla="ls -lha"

# mac specific
if [[ $OSTYPE == darwin* ]]; then
	# $preview this.png
	alias preview="open -a Preview"
	#alias s='open -a "Sublime Text"'
	# 
	# v is already used by ~/bin/v
	# which should open file in new tab in existing MacVim window
	#
	# simple macvim, -p = use tab to open multiple files
	# Not sophisticated as ~/bin/v since it opens new MacVim instead of reusing
	alias vi="mvim -p"
	alias vim="mvim -p"

elif [[ $OSTYPE == freebsd* ]]; then
	alias vi='vim'
fi

# Quicker navigation
alias ~="cd ~"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

